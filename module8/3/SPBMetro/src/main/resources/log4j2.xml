<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>
        <File name="log" fileName="logs/LogFile.log">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </appenders>

    <loggers>
        <Logger name= "uncorrectStation" level="info">
            <AppenderRef ref="log"/>
        </Logger>
        <Logger name= "correctStation" level="info">
            <AppenderRef ref="log"/>
        </Logger>

        <Root level="error">
            <AppenderRef ref="log"/>
        </Root>
    </loggers>

</configuration>